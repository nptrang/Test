@model HTC_SHOPVIP.Models.Sanpham
@using HTC_SHOPVIP.Models
@{
    ViewBag.Title = "CapNhat";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container admim-capnhat">
    <div class="row">
        <div class="tile">
            <h3 class="tile-title">Cập nhật sản phẩm</h3>
            <div class="tile-body">
                
                <form class="row" action="/Admin/SanPham/CapNhat1" method="get">
                    <div class="form-group col-md-3">
                        <label class="control-label">Mã sản phẩm</label>
                        <input name="masp" class="form-control" type="text" value="@Model.MaSP">
                    </div>


                    <div class="form-group col-md-3">
                        <label class="control-label">Tên sản phẩm</label>
                        <input name="tensp" class="form-control" type="text" value="@Model.TenSP">
                    </div>


                    <div class="form-group  col-md-3">
                        <label class="control-label">Số lượng</label>
                        <input name="soluongsp" class="form-control" type="number" value="@Model.Sltrongkho">
                    </div>

                    <div class="form-group col-md-3">
                        <label for="exampleSelect1" class="control-label">Hãng Sản suất</label>
                        <select name="hangsx" class="form-control" id="exampleSelect1" value="@Model.MaHangSx">
                            @using (var con = new Model1())
                            {
                                var db = (from s in con.HangSanXuats
                                          select s).ToList();


                                foreach (var item in db)
                                {
                                    <option value="@item.MaHangSx">@item.TenHang</option>
                                }




                            }
                        </select>
                    </div>
                    <div class="form-group col-md-3 ">
                        <label for="exampleSelect1" class="control-label">Danh mục</label>
                        <select name="danhmuc" class="form-control" id="exampleSelect1" value="@Model.MaloaiSP">
                            @using (var con = new Model1())
                            {
                                var db = (from s in con.SP_Theloai
                                          select s).ToList();


                                foreach (var item in db)
                                {
                                    <option value="@item.Maloaisp">@item.tentheloai</option>
                                }




                            }

                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Giá bán</label>
                        <input name="giasp" class="form-control" type="text" value="@Model.Gia">
                    </div>


                    <div class="form-group col-md-3">
                        <label class="control-label">Trọng lượng</label>
                        <input name="trongluong" class="form-control" type="text" value="@Model.trongluong">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Bộ nhớ</label>
                        <input name="bonho" class="form-control" type="text" value="@Model.Memory">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">RAM</label>
                        <input name="ram" class="form-control" type="text" value="@Model.Ram">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Pin</label>
                        <input name="pin" class="form-control" type="text" value="@Model.Pin">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Màn hình</label>
                        <input name="manhinh" class="form-control" type="text" value="@Model.Manhinh">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Chip</label>
                        <input name="chip" class="form-control" type="text" value="@Model.Chip">
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label">Mô tả sản phẩm</label>
                        <textarea class="form-control" name="mota" id="mota" value="@Model.mota"></textarea>
                        <script>CKEDITOR.replace('mota');</script>
                    </div>
                    <button class="user-btn-save" type="submit">Lưu lại</button>
                    <a class="user-btn-close pull-right" href="~/Admin/SanPham/DSSanPham">Hủy bỏ</a>
                </form>

            </div>

            
        </div>
    </div>
</div>